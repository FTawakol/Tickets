<div class="row flex-container" style="background-color:#0052cc; padding-right:10%  ; padding-left:10%; padding-top:5%; padding-bottom:20%"> 

<h2 class="heading" style="font-size:2.5rem;color:white;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="color:white;>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,placeholder:'Email', autocomplete: "email" %>
  </div>

  <div class="field" style="color:white;">
    <%= f.label :password %><br />
    <%= f.password_field :password,placeholder:'Password', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group" style="color:white;>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
