<div class="row flex-container" style="padding-right:10%  ; padding-left:10%; padding-top:5%; padding-bottom:20%"> 

<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered table-hover" style="background-color:white;">
<div id="tickets">
   <tr>
   <thead style="background-color:lightblue;">
   <th>Time</th>
    <th>User</th>
    <th>PC</th>
    <th>Type</th>
    <th>Description</th>
    <th>Link</th>
    </thead>
  </tr>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.created_at.strftime('%Y-%m-%d') %> </td>
      <td><%= ticket.User %> </td>
      <td><%= ticket.PC %></td>
      <td> <%= ticket.Type %> </td>
      <td> <%= ticket.Description %> </td>
      <td> <%= link_to "Show this ticket", ticket, class:"btn btn-secondary" %></td>
    </tr>
  <% end %>
  </table>
  <%= link_to "New ticket", new_ticket_path, class:"btn btn-secondary" %>
</div>

</div>
