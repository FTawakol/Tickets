<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :User, style: "display: block; color:Orange;" %>
    <%= form.text_field :User, value: current_user.email%>
  </div>

  <div>
    <%= form.label :Date, style: "display: block; color:Orange;" %>
    <%= form.text_field :Date, value: Time.now.strftime("%Y-%d-%m %H:%M:%S") %>
  </div>

  <div>
    <%= form.label :Product, style: "display: block; color:Orange;" %>
    <%= form.select :PC, [['Select', nil], ['Steel','Steel'],['HDG', 'HDG']] %>
  </div>

  <div>
    <%= form.label :Type, style: "display: block; color:Orange;" %>
    <%= form.select :Type, [['Select', nil], ['QC','QC'],['Warehouse', 'Warehouse']] %>  </div>

  <div>
    <%= form.label :Description, style: "display: block; color:Orange;" %> 
    <%= form.text_field :Description %>
  </div>

  <div>
    <%= form.text_field :user_id, id: :ticket_user_id, value: current_user.id, type: :hidden %>
  </div>
  
</br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
